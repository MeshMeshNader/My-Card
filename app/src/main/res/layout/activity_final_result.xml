<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.Payment.FinalResultCustom">

    <TextView
        android:id="@+id/final_result_custom_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/et_margin_vertical"
        android:layout_marginTop="@dimen/et_margin_vertical"
        android:layout_marginBottom="@dimen/et_margin_vertical"
        android:drawableLeft="@drawable/back_arrow_orange"
        android:text="Edit"
        android:textColor="@color/primary_orange"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/final_result_custom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/final_result_custom_back"
        android:layout_centerHorizontal="true"
        android:text="Design From Scratch"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/final_result_custom_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/final_result_custom_text"
        android:layout_marginStart="@dimen/et_margin_small_start_end"
        android:layout_marginTop="@dimen/et_margin_vertical"
        android:text="The Final Result"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/final_result_pay_btn"
        android:layout_below="@id/final_result_custom_text2"
        android:layout_margin="@dimen/et_margin_small_start_end"
        android:padding="@dimen/et_margin_small_start_end">

        <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/final_result_custom_card_dim"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:elevation="20dp"
            android:orientation="vertical"
            app:cardCornerRadius="6dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:id="@+id/final_result_custom_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/dark_orange">

                <ImageView
                    android:id="@+id/final_result_custom_image1"
                    android:layout_width="@dimen/corners_images_dim"
                    android:layout_height="@dimen/corners_images_dim"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/et_margin_vertical"
                    android:layout_marginTop="@dimen/et_margin_vertical"
                    android:src="@drawable/ic_sad_decoration1" />

                <ImageView
                    android:id="@+id/final_result_custom_image2"
                    android:layout_width="@dimen/corners_images_dim"
                    android:layout_height="@dimen/corners_images_dim"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/et_margin_vertical"
                    android:layout_marginEnd="@dimen/et_margin_vertical"
                    android:src="@drawable/ic_sad_decoration2" />

                <ImageView
                    android:id="@+id/final_result_custom_image3"
                    android:layout_width="@dimen/corners_images_dim"
                    android:layout_height="@dimen/corners_images_dim"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/et_margin_vertical"
                    android:layout_marginBottom="@dimen/et_margin_vertical"
                    android:src="@drawable/ic_sad_decoration3" />

                <ImageView
                    android:id="@+id/final_result_custom_image4"
                    android:layout_width="@dimen/corners_images_dim"
                    android:layout_height="@dimen/corners_images_dim"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="@dimen/et_margin_vertical"
                    android:layout_marginBottom="@dimen/et_margin_vertical"
                    android:src="@drawable/ic_sad_decoration4" />


                <TextView
                    android:id="@+id/final_result_custom_center_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Eid Mobark"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/half_circle" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/final_result_pay_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_height"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/et_margin_start_end"
        android:layout_marginTop="@dimen/et_margin_vertical"
        android:layout_marginEnd="@dimen/et_margin_start_end"
        android:layout_marginBottom="@dimen/et_margin_vertical"
        android:background="@drawable/button_shape_orange"
        android:text="Pay"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22sp" />

</RelativeLayout>