<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.UserHome">

    <ImageView
        android:id="@+id/user_home_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:src="@drawable/ic_logo_orange" />

    <LinearLayout
        android:id="@+id/occasion_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_home_logo"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/occasion_cat_happy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_clicked_happy"
            android:padding="10dp"
            android:text="Happy Occasion"
            android:textAllCaps="false"
            android:textSize="18sp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/occasion_cat_sad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_unclicked"
            android:padding="10dp"
            android:text="Sad Occasion"
            android:textAllCaps="false"
            android:textSize="18sp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/user_home_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/occasion_category"
        android:layout_margin="30dp"
        android:orientation="vertical" />


</RelativeLayout>